{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Governance Report",
  "description": "Placeholder schema for governance_evaluator.py output — defines the expected structure for governance compliance evaluation (to be built in a future iteration).",
  "type": "object",
  "required": ["generated_at", "governance_checks", "compliance_summary"],
  "properties": {
    "generated_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of report generation."
    },
    "governance_checks": {
      "type": "array",
      "description": "List of governance check results.",
      "items": {
        "$ref": "#/definitions/governance_check"
      }
    },
    "compliance_summary": {
      "$ref": "#/definitions/compliance_summary",
      "description": "Overall compliance summary."
    },
    "audit_trail": {
      "type": "array",
      "description": "Audit trail entries for reproducibility tracking.",
      "items": {
        "$ref": "#/definitions/audit_entry"
      }
    }
  },
  "definitions": {
    "governance_check": {
      "type": "object",
      "required": ["check_id", "check_name", "status", "description"],
      "properties": {
        "check_id": { "type": "string", "description": "Unique identifier for the governance check." },
        "check_name": { "type": "string", "description": "Human-readable check name." },
        "status": {
          "type": "string",
          "enum": ["pass", "fail", "warning", "not_applicable"],
          "description": "Check result status."
        },
        "description": { "type": "string", "description": "What this check validates." },
        "detail": { "type": ["string", "null"], "description": "Additional detail on findings." },
        "severity": {
          "type": "string",
          "enum": ["critical", "high", "medium", "low", "info"],
          "description": "Severity level of the check."
        }
      }
    },
    "compliance_summary": {
      "type": "object",
      "required": ["total_checks", "passed", "failed", "warnings", "compliance_score"],
      "properties": {
        "total_checks": { "type": "integer", "description": "Total number of governance checks run." },
        "passed": { "type": "integer" },
        "failed": { "type": "integer" },
        "warnings": { "type": "integer" },
        "compliance_score": { "type": "number", "description": "Fraction of checks passed (0.0-1.0)." },
        "note": { "type": ["string", "null"], "description": "Governance methodology note." }
      }
    },
    "audit_entry": {
      "type": "object",
      "required": ["timestamp", "action", "detail"],
      "properties": {
        "timestamp": { "type": "string", "format": "date-time" },
        "action": { "type": "string", "description": "Action performed (e.g., 'schema_validation', 'data_integrity_check')." },
        "detail": { "type": "string" },
        "result": { "type": ["string", "null"], "enum": ["pass", "fail", "warning", null] }
      }
    }
  },
  "examples": [
    {
      "generated_at": "2026-02-15T12:00:00+00:00",
      "governance_checks": [
        {
          "check_id": "GOV-001",
          "check_name": "Reproducibility Verification",
          "status": "pass",
          "description": "Verify that benchmark tasks produce deterministic results within acceptable variance.",
          "detail": "92% of tasks show consistent outcomes across 3+ runs.",
          "severity": "critical"
        }
      ],
      "compliance_summary": {
        "total_checks": 8,
        "passed": 6,
        "failed": 1,
        "warnings": 1,
        "compliance_score": 0.75,
        "note": "Governance evaluation is a placeholder — full implementation pending."
      },
      "audit_trail": [
        {
          "timestamp": "2026-02-15T12:00:00+00:00",
          "action": "schema_validation",
          "detail": "All sub-report schemas validated successfully.",
          "result": "pass"
        }
      ]
    }
  ]
}
